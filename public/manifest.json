{

	"manifest_version": 2,
	"name": "Hourglass",
	"version": "2019.4.27",

	"options_page": "options.html",
	
	"permissions" : [
		"alarms",
		"geolocation",
		"idle",
		"notifications",
		"storage",
		"tabs",
		"unlimitedStorage"
	],

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}